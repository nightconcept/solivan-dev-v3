---
// src/layouts/BaseLayout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import TableOfContents from "../components/TableOfContents.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  title?: string;
  description?: string;
  headings?: Heading[];
}

const { title, description = SITE_DESCRIPTION, headings = [] } = Astro.props;
const showToc = headings.length > 0;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title || SITE_TITLE}</title>
    <meta name="description" content={description} />

    {/* Webmention endpoints - REPLACE WITH YOUR ACTUAL ENDPOINTS AFTER REGISTRATION */}
    <link rel="webmention" href="https://webmention.io/YOUR-DOMAIN/webmention" />
    <link rel="pingback" href="https://webmention.io/YOUR-DOMAIN/xmlrpc" />

    {/* IndieAuth for webmention.io authentication */}
    <link rel="me" href="https://github.com/nightconcept" />
    <link rel="me" href="https://mastodon.social/@nightconcept" />
    <link rel="me" href="https://bsky.app/profile/nightconcept.bsky.social" />

    {/* Favicon links */}
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    {/* Google Font: Inter */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">

    <style is:global>
      @import '../styles/global.css';
      body {
        font-family: 'Inter', sans-serif;
      }
    </style>
</head>
<body class="bg-background text-foreground min-h-screen">
    <div class="container mx-auto px-4">
        <Header>
             <ThemeToggle slot="theme-toggle" />
        </Header>

        <main class="mx-auto mt-8 max-w-3xl">
            <slot />
        </main>

        <Footer />
    </div>

    {showToc && <TableOfContents headings={headings} />}

</body>
</html>